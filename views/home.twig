{% extends 'layouts/app.twig' %}
{% block content %}
    {% include 'layouts/flash.twig' %}
    <div class="jumbotron">
        <h2>SLUG GENERATOR FOR POST TITLE</h2>
        <p>using <a href="http://slugify.net/api">http://slugify.net/api</a></p>
        <p>ex : <em>http://www.yourdomain.com/my-awesome-title</em></p>
    </div>
    <div class="row">
           <div class="col-md-6 col-md-offset-3">
               <div class="panel panel-primary">
                   <div class="panel-heading">
                       <div class="panel-title">Make post with Slug</div>
                   </div>
                   <div class="panel-body">
                        <form action="{{path_for('generate.slug')}}" method="post">
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" class="form-control" id="title" placeholder="Title" name="title">
                                <span id="slug" class="help-block"></span>
                            </div>
                            <div class="form-group">
                                <label for="comment">Comment</label>
                                <textarea class="form-control" rows="3" id="comment" placeholder="Comment" name="comment"></textarea>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary">POST</button>
                            </div>
                            {{ csrf_field() | raw }}
                        </form>
                   </div>
               </div>
               <ul>
                   {% for d in data %}
                        <li><a href="{{path_for('view.post', {'slug': d.slug})}}">{{d.title}}</a></li>
                   {% endfor %}
               </ul>
           </div>
       </div>
{% endblock %}